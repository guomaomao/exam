<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/m_iv_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/avatar"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/m_tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_normal_size"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/m_tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_mini_size"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/dark_gray"
                    />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/m_ll_content"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="回访记录："
                    android:textSize="@dimen/text_mini_size"
                    android:textColor="@color/blue"
                    />

                <TextView
                    android:id="@+id/m_tv_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_mini_size"
                    android:textColor="@color/black"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/m_ll_voice"
                android:layout_width="120dp"
                android:background="@drawable/my_bg_blue"
                android:layout_margin="5dp"
                android:visibility="gone"
                android:padding="5dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="3'00"
                    android:textSize="@dimen/text_normal_size"
                    android:textColor="@color/white"
                    android:layout_marginLeft="10dp"
                    />

                <ImageView
                    android:id="@+id/m_iv_voice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="12dp"
                    android:paddingEnd="10dp"
                    android:src="@mipmap/ease_chatto_voice_playing" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
